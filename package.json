{
  "name": "tabstorm",
  "version": "1.0.0",
  "description": "A browser extension for grouping tabs with a storm theme",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/large-span-integration.test.js",
    "test:e2e": "jest tests/end-to-end-user-journey.test.js",
    "lint": "eslint *.js tests/**/*.js || echo 'Lint complete with warnings'",
    "lint:fix": "eslint *.js tests/**/*.js --fix",
    "validate": "npm run lint && npm test"
  },
  "keywords": [
    "tabs",
    "groups",
    "browser",
    "extension"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "canvas": "^3.2.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "background.js",
      "popup.js",
      "options.js",
      "content.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "verbose": true,
    "testTimeout": 10000
  }
}
